// RepairLoader.net Prisma Schema
// Full-featured forum + tools platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTH
// ============================================

enum Role {
  USER
  MOD
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  handle        String?   @unique
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastSeenAt    DateTime  @updatedAt

  // Reputation & gamification
  rep           Int       @default(0)

  // Relations
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  threads       Thread[]
  reactions     Reaction[]
  notifications Notification[]

  @@index([email])
  @@index([handle])
}

// NextAuth.js tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// FORUM
// ============================================

model Category {
  id       String   @id @default(cuid())
  slug     String   @unique
  name     String
  desc     String?
  order    Int      @default(0)
  icon     String?  // Lucide icon name
  isLocked Boolean  @default(false)
  threads  Thread[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Thread {
  id             String    @id @default(cuid())
  slug           String
  title          String
  categoryId     String
  category       Category  @relation(fields: [categoryId], references: [id])
  authorId       String
  author         User      @relation(fields: [authorId], references: [id])

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  viewCount      Int       @default(0)
  score          Int       @default(0) // Hot ranking score

  isLocked       Boolean   @default(false)
  isPinned       Boolean   @default(false)
  isDeleted      Boolean   @default(false)

  acceptedPostId String?   @unique // Solution post
  acceptedPost   Post?     @relation("AcceptedSolution", fields: [acceptedPostId], references: [id])

  posts          Post[]    @relation("ThreadPosts")
  tags           ThreadTag[]

  @@index([categoryId])
  @@index([authorId])
  @@index([createdAt])
  @@index([score])
  @@index([slug])
}

model Post {
  id         String   @id @default(cuid())
  threadId   String
  thread     Thread   @relation("ThreadPosts", fields: [threadId], references: [id], onDelete: Cascade)
  authorId   String
  author     User     @relation(fields: [authorId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  contentMd  String   @db.Text // Markdown source
  contentTxt String   @db.Text // Plain text for search

  score      Int      @default(0)
  isDeleted  Boolean  @default(false)

  attachments Attachment[]
  reactions   Reaction[]
  acceptedFor Thread?      @relation("AcceptedSolution")

  @@index([threadId])
  @@index([authorId])
  @@index([createdAt])
}

model Attachment {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  url       String
  key       String   // Storage key for deletion
  name      String
  mime      String
  bytes     Int
  sha256    String?

  createdAt DateTime @default(now())

  @@index([postId])
}

model Reaction {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  kind      String   // up, down, thanks, solved
  createdAt DateTime @default(now())

  @@unique([postId, userId, kind])
  @@index([postId])
  @@index([userId])
}

model Tag {
  id      String      @id @default(cuid())
  slug    String      @unique
  name    String
  threads ThreadTag[]

  @@index([slug])
}

model ThreadTag {
  threadId String
  thread   Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  tagId    String
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([threadId, tagId])
  @@index([threadId])
  @@index([tagId])
}

// ============================================
// TOOLS
// ============================================

model Tool {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  desc        String   @db.Text
  category    String
  icon        String?  // Lucide icon name
  order       Int      @default(0)

  // Analytics
  runs        Int      @default(0)
  likes       Int      @default(0)

  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  submissions ToolRunSubmission[]

  @@index([slug])
  @@index([category])
}

model ToolRunSubmission {
  id         String   @id @default(cuid())
  toolId     String
  tool       Tool     @relation(fields: [toolId], references: [id])
  userId     String?

  summary    String   @db.Text
  payload    Json     // Structured result data

  createdAt  DateTime @default(now())

  // Link to forum thread if user created one
  linkedThreadId String?

  @@index([toolId])
  @@index([userId])
  @@index([createdAt])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  kind      String    // reply, mention, solution, mod-action
  data      Json      // Flexible payload

  readAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([readAt])
}

// ============================================
// MODERATION
// ============================================

model Report {
  id         String   @id @default(cuid())
  reporterId String
  targetType String   // post, thread, user
  targetId   String
  reason     String
  details    String?  @db.Text

  status     String   @default("pending") // pending, resolved, dismissed
  resolvedBy String?
  resolvedAt DateTime?

  createdAt  DateTime @default(now())

  @@index([status])
  @@index([createdAt])
}
